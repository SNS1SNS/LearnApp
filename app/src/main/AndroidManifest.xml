        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LearnApp"
        tools:targetApi="31">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.LearnApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LanguageChangeActivity"
            android:exported="false"/>
        <activity android:name=".LanguageDetailActivity"
            android:exported="false"/>
        <activity android:name=".LanguageProgressActivity"
            android:exported="false"/>
        <activity android:name=".LoginActivity"
            android:exported="true"/>
        <activity android:name=".RegisterActivity"
            android:exported="false"/>
        <activity android:name=".WordListActivity"
            android:exported="false"/>
        <activity android:name=".LearnWordActivity"
            android:exported="false"/>
        <activity android:name=".AddActivity"
            android:exported="false">
